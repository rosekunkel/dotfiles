<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
  <!-- For some reason we need a label on the root menu. Seems like a bug. -->
  <menu id="root-menu" label="">
    <item label="Emacs">
      <action name="Execute">
	<command>emacs</command>
	<startupnotify>
          <enabled>yes</enabled>
	</startupnotify>
      </action>
    </item>
    <item label="ROXTerm">
      <action name="Execute">
	<command>roxterm</command>
	<startupnotify>
          <enabled>yes</enabled>
	</startupnotify>
      </action>
    </item>
    <item label="Firefox">
      <action name="Execute">
	<command>firefox</command>
	<startupnotify>
          <enabled>yes</enabled>
	</startupnotify>
      </action>
    </item>
    <item label="Spotify">
      <action name="Execute">
	<command>spotify --force-device-scale-factor=2</command>
	<startupnotify>
          <enabled>yes</enabled>
	</startupnotify>
      </action>
    </item>
    <item label="KeePassX">
      <action name="Execute">
	<command>keepassx2</command>
	<startupnotify>
          <enabled>yes</enabled>
	</startupnotify>
      </action>
    </item>
    <separator/>
    <item label="Reconfigure">
      <action name="Reconfigure"/>
    </item>
    <item label="Exit">
      <action name="Exit">
	<prompt>yes</prompt>
      </action>
    </item>
  </menu>
</openbox_menu>
